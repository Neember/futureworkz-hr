= semantic_form_for user do |f|
  = f.input :designation
  = f.input :name
  = f.input :english_name
  = f.input :email
  = f.input :personal_email
  = f.input :birthday, as: :date_picker
  = f.input :address, input_html: { rows: 2 }
  = f.input :phone_number
  = f.input :basic_salary
  = f.input :pay_increment
  = f.input :social_insurance
  = f.input :started_on, as: :date_picker
  = f.input :probation_end_on, as: :date_picker
  = f.input :note, input_html: { rows: 2 }
  = f.input :is_admin, as: :boolean
  = f.submit class: 'btn-u'
  -if user.id.nil?
    = f.hidden_field :password, class: 'form-control', value: '123123123'
    = f.hidden_field :password_confirmation, class: 'form-control', value: '123123123'
  = link_to 'Back', users_path, class: 'btn-u btn-u-default'
